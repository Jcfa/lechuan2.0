<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ad_goods_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/spacing_small"
            android:background="@drawable/selector_common"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_back"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:layout_weight="1"
            android:background="@drawable/shape_home_search"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:scaleType="centerInside"
                android:src="@mipmap/home_search"/>

            <EditText
                android:id="@+id/ad_goods_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00ffffff"
                android:gravity="center_vertical"
                android:hint="@string/hint_goods_search"
                android:maxLength="32"
                android:maxLines="1"
                android:singleLine="true"
                android:paddingRight="3dp"
                android:textColorHint="#c0bebe"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/z_text_little"/>

            <ImageView
                android:id="@+id/ad_goods_search_delete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:src="@mipmap/home_delete_search"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/ad_goods_scan_code"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/spacing_small"
            android:background="@drawable/selector_common"
            android:scaleType="centerInside"
            android:src="@mipmap/home_scan"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:visibility="gone"
        android:background="#EEEEEE"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:visibility="gone"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/ad_shop_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/background_image"
            android:scaleType="centerInside"/>

        <TextView
            android:id="@+id/ad_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ad_shop_pic"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/z_text_small"
            android:text="比酷旗舰店"
            android:textColor="@color/color_262626"/>

        <TextView
            android:id="@+id/ad_shop_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_toRightOf="@+id/ad_shop_pic"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/ad_shop_name"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/z_text_small"
            android:text="bcool比酷品牌于1996年诞生于伦敦东区的Spitalfield'sMarket创意集市。"
            android:textColor="@color/color_999999"
            android:layout_marginRight="50dp"
            android:lineSpacingMultiplier="1.1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/z_text_normal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="添加"
            android:textColor="@color/color_999999"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#EEEEEE"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ad_goods_sort_sale"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/sale_number"
            android:textColor="@color/color_262626"
            android:background="@drawable/selector_common"
            android:textSize="@dimen/z_text_normal"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:drawableRight="@mipmap/home_hand_default"/>

        <TextView
            android:id="@+id/ad_goods_sort_stock"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/stock"
            android:textColor="@color/color_262626"
            android:background="@drawable/selector_common"
            android:textSize="@dimen/z_text_normal"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:drawableRight="@mipmap/home_hand_default"/>

        <TextView
            android:id="@+id/ad_goods_catalog"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/selector_common"
            android:text="@string/goods_list_all"
            android:textColor="@color/color_262626"
            android:textSize="@dimen/z_text_normal"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/goods_line"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ad_goods_no_goods"
        android:background="#EEEEEE">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/ad_goods_swipe"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/ad_goods_recycle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#eeeeee"/>

        </android.support.v4.widget.SwipeRefreshLayout>

        <View
            android:id="@+id/catalog_shade"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#33000000"
            android:visibility="gone"/>

    </FrameLayout>

    <TextView
        android:id="@+id/ad_goods_no_goods"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:gravity="center"
        android:text="没有商品"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/ad_goods_search_no_goods"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:gravity="center"
        android:text="抱歉，没有相关商品"
        android:textColor="#ff0000"
        android:textSize="@dimen/z_title_size"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/ad_goods_hint_no_goods"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:gravity="center"
        android:text="您的店铺还没有商品"
        android:visibility="gone"/>

</LinearLayout>