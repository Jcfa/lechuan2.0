<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/evaluater_item_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_common"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="@color/color_EEEEEE" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:id="@+id/evaluater_item_user_layout"
            android:layout_width="520dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_common"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <ImageView
                android:id="@+id/evaluater_item_logo"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_launcher"
                android:layout_alignParentTop="true"
                android:layout_marginRight="6dp"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/evaluater_item_user_name"
                style="@style/text_5E5E5E_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="用户名称"
                android:paddingTop="4dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/evaluater_item_logo" />

            <TextView
                android:id="@+id/evaluater_item_dat"
                style="@style/text_9E9E9E_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="4dp"
                android:text="2017-12-04 08:08:08"
                android:layout_below="@+id/evaluater_item_user_name"
                android:layout_toEndOf="@+id/evaluater_item_logo" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/evaluater_item_reward_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/selector_common"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/evaluater_item_comment_type"
                android:layout_width="22dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@mipmap/comment_a" />

            <TextView
                android:id="@+id/evaluater_item_comment_lable"
                style="@style/text_FF6537_14"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="好评" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_EEEEEE" />

    <TextView
        android:id="@+id/evaluater_item_title"
        style="@style/text_5E5E5E_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="10dp"
        android:text="商品评论内容" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/evaluater_item_img_a"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@mipmap/logo_e" />

        <ImageView
            android:id="@+id/evaluater_item_img_b"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/logo_e" />

        <ImageView
            android:id="@+id/evaluater_item_img_c"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@mipmap/logo_e" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:visibility="gone"
        android:background="@color/color_EEEEEE"/>

    <RelativeLayout
        android:id="@+id/evaluater_item_goods_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="#F8F8F8"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/evaluater_item_goods_logo"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@mipmap/logo_g"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dp"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/evaluater_item_goods_name"
            style="@style/text_5E5E5E_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="商品名称"
            android:paddingTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/evaluater_item_goods_logo" />

        <TextView
            android:id="@+id/evaluater_item_goods_price"
            style="@style/text_FF6537_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="192.00"
            android:paddingTop="10dp"
            android:layout_below="@+id/evaluater_item_goods_name"
            android:layout_toEndOf="@+id/evaluater_item_goods_logo" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/evaluater_item_comment_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/selector_common"
            android:gravity="center_vertical|center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:padding="11dp"
                android:src="@mipmap/ic_comment" />

            <TextView
                style="@style/text_5E5E5E_14"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="评论 " />

            <TextView
                android:id="@+id/evaluater_item_comment"
                style="@style/text_5E5E5E_14"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:visibility="gone"
            android:background="@color/color_EEEEEE"/>

        <LinearLayout
            android:id="@+id/evaluater_item_like_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:visibility="gone"
            android:background="@drawable/selector_common"
            android:gravity="center_vertical|center">

            <ImageView
                android:id="@+id/evaluater_item_share_iv"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@mipmap/ic_share" />

            <TextView
                android:id="@+id/evaluater_item_like"
                style="@style/text_5E5E5E_14"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="分享赚佣" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>