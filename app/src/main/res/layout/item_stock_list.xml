<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/shape_down_line"
    android:layout_height="80dp">

    <LinearLayout
        android:id="@+id/stock_goods_root"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0px"
            android:layout_weight="1.8"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/stock_goods_picture"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="5dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/stock_goods_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/stock_goods_picture"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/z_text_small"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="--"/>

            <TextView
                android:id="@+id/stock_goods_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/stock_goods_picture"
                android:layout_centerVertical="true"
                android:textSize="@dimen/z_text_small"
                android:maxWidth="200dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="001"/>

            <TextView
                android:id="@+id/stock_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="200dp"
                android:layout_toRightOf="@+id/stock_goods_picture"
                android:textSize="@dimen/z_text_small"
                android:text="Â¥ 0.00"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/color_FF6537"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/goods_stock_number"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="0"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/goods_stock_cost"
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="14sp"
            android:text="0"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/lineBg"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>