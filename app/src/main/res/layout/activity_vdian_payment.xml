<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background"
    android:orientation="vertical">

    <include layout="@layout/layout_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_down_line">

        <TextView
            android:id="@+id/vdian_payment_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textColor="@color/textGray"
            android:text="服务项目:"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/vdian_payment_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/vdian_payment_tag"
            android:text="公众号开通"
            android:textColor="@color/textBlack"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/vdian_payment_yuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="元"/>

        <TextView
            android:id="@+id/vdian_payment_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/vdian_payment_yuan"
            android:text="500.00"
            android:textColor="@color/colorRed"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/vdian_payment_type"
            android:layout_below="@+id/vdian_payment_type"
            android:layout_marginTop="10dp"
            android:text="(含服务费300.00+代办费200.00)"
            android:visibility="gone"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_tiny"
        android:background="@drawable/shape_down_line"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="0dp"
        android:text="支付方式："
        android:textSize="@dimen/textSize_normal"
        android:textStyle="bold"/>

    <View style="@style/horizontal_line"/>

    <TextView
        android:id="@+id/vdian_payment_wechat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_small"
        android:background="@drawable/white_bg"
        android:drawableLeft="@mipmap/ic_wxpay_tag"
        android:drawablePadding="@dimen/spacing_small"
        android:drawableRight="@mipmap/icon_arrow_right"
        android:gravity="center_vertical"
        android:paddingLeft="24dp"
        android:paddingRight="@dimen/spacing_large"
        android:text="@string/weixin_pay"
        android:textColor="@color/black_shallow_text"
        android:textSize="@dimen/textSize_normal"/>

    <View style="@style/horizontal_line"/>

    <TextView
        android:id="@+id/vdian_payment_alipay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_small"
        android:background="@drawable/white_bg"
        android:drawableLeft="@mipmap/ic_alipay_tag"
        android:drawablePadding="@dimen/spacing_small"
        android:drawableRight="@mipmap/icon_arrow_right"
        android:gravity="center_vertical"
        android:paddingLeft="24dp"
        android:paddingRight="@dimen/spacing_large"
        android:text="@string/alipay"
        android:textColor="@color/black_shallow_text"
        android:textSize="@dimen/textSize_normal"/>

</LinearLayout>