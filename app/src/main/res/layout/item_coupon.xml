<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:id="@+id/coupon_root"
    android:background="@android:color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lineBg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥"
        android:textSize="@dimen/z_text_normal"
        android:textColor="#f30000"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/coupon_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="19dp"
        android:text="0"
        android:textSize="@dimen/z_title_size"
        android:textColor="#f30000"/>

    <TextView
        android:id="@+id/coupon_use_need"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:textSize="@dimen/z_text_normal"
        android:textColor="@color/color_5E5E5E"
        android:text="满100元可用"/>

    <View
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:background="@color/lineBg"
        android:layout_alignBottom="@+id/coupon_use_need"
        android:layout_toRightOf="@+id/coupon_use_need"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/coupon_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/coupon_use_need"
        android:text="总数"
        android:layout_toRightOf="@+id/coupon_use_need"
        android:textSize="@dimen/z_text_normal"
        android:layout_marginLeft="40dp"
        android:textColor="@color/color_5E5E5E"/>

    <TextView
        android:id="@+id/coupon_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/coupon_total"
        android:layout_toRightOf="@+id/coupon_total"
        android:layout_marginLeft="20dp"
        android:textSize="@dimen/z_text_normal"
        android:textColor="@color/color_5E5E5E"
        android:text="已领"/>
    
    <TextView
        android:id="@+id/coupon_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:textSize="@dimen/z_text_small"
        android:textColor="@color/color_999999"
        android:text="2017-11-03 — 2017-11-08"/>

    <ImageButton
        android:id="@+id/coupon_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@mipmap/icon_delete_64_00bcb4"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:id="@+id/coupon_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:src="@mipmap/icon_share_64_00bcb4"
        android:background="@android:color/transparent"/>

</RelativeLayout>