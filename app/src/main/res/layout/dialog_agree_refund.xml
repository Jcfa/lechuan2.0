<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <TextView
        style="@style/text_5E5E5E_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="退款确认"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_EEEEEE"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="42dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:orientation="horizontal">

            <TextView
                style="@style/text_9E9E9E_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单编号：" />

            <TextView
                android:id="@+id/dialog_agree_refund_id"
                style="@style/text_FF6537_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00000000001" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:orientation="horizontal">

            <TextView
                style="@style/text_9E9E9E_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款类型：" />

            <TextView
                android:id="@+id/dialog_agree_refund_type"
                style="@style/text_5E5E5E_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="不需要退款" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:orientation="horizontal">

            <TextView
                style="@style/text_9E9E9E_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款原因：" />

            <TextView
                android:id="@+id/dialog_agree_refund_reason"
                style="@style/text_5E5E5E_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品质量有问题" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:orientation="horizontal">

            <TextView
                style="@style/text_9E9E9E_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可退金额：" />

            <TextView
                android:id="@+id/dialog_agree_refund_amount"
                style="@style/text_5E5E5E_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="128.00(含运费8.00)" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:orientation="horizontal">

            <TextView
                style="@style/text_9E9E9E_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实退金额：" />

            <TextView
                android:id="@+id/dialog_agree_refund_amount_b"
                style="@style/text_FF6537_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="128.00" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_EEEEEE"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_agree_refund_cancel"
            style="@style/text_5E5E5E_16"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_common"
            android:gravity="center"
            android:text="取消" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_EEEEEE"/>

        <TextView
            android:id="@+id/dialog_agree_refund_agree"
            style="@style/text_00BCB4_16"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_common"
            android:gravity="center"
            android:text="同意退款" />

    </LinearLayout>

</LinearLayout>