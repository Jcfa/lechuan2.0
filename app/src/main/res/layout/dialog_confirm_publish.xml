<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.8"
        android:gravity="bottom|center_horizontal"
        android:text="是否确认发布至公众号？"
        android:textSize="@dimen/z_text_normal"
        android:textColor="@color/textBlack"/>

    <TextView
        android:id="@+id/publish_art_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:gravity="center"
        android:textSize="@dimen/z_text_small"/>

    <View
        style="@style/under_line_C7C7C7"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/publish_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="取消"
            android:textSize="@dimen/z_text_normal"
            android:textColor="@color/color_5E5E5E"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/lineBg"/>

        <TextView
            android:id="@+id/publish_ok"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="确认发布"
            android:textSize="@dimen/z_text_normal"
            android:textColor="@color/color_5E5E5E"/>

    </LinearLayout>
    
</LinearLayout>