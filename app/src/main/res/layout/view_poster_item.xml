<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/poster_item_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_bg"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="@color/color_EEEEEE" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:id="@+id/poster_item_user_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/selector_common"
            android:paddingLeft="10dp">

            <ImageView
                android:id="@+id/poster_item_logo"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@mipmap/poster_details_logo" />

            <TextView
                android:id="@+id/poster_item_user_name"
                style="@style/text_5E5E5E_16"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="4dp"
                android:text="用户名称" />

            <ImageView
                android:id="@+id/poster_item_type"
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@mipmap/poster_seller_icon" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/poster_item_reward_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/selector_common"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/poster_item_reward_type"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@mipmap/poster_commission" />

            <TextView
                android:id="@+id/poster_item_reward_lable"
                style="@style/text_5E5E5E_14"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="佣金" />

            <TextView
                android:id="@+id/poster_item_reward"
                style="@style/text_FF6537_16"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:paddingRight="5dp"
                android:text="8.88" />

        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="@color/color_DDDDDD" />

    <ImageView
        android:id="@+id/poster_item_img"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:scaleType="centerCrop"
        android:background="@color/color_EEEEEE"
        android:src="@mipmap/logo_c" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_EEEEEE" />

    <TextView
        android:id="@+id/poster_item_title"
        style="@style/text_5E5E5E_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="10dp"
        android:text="文章标题" />

    <TextView
        android:id="@+id/poster_item_content"
        style="@style/text_9E9E9E_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:maxLines="5"
        android:text="文章内容" />

    <View
        style="@style/horizontal_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/poster_item_browse_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_vertical|center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:src="@mipmap/ic_look" />

            <TextView
                android:id="@+id/poster_item_browse"
                style="@style/text_5E5E5E_14"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/poster_item_like_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/selector_common"
            android:gravity="center_vertical|center">

            <ImageView
                android:id="@+id/poster_item_like_iv"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@mipmap/ic_praise" />

            <TextView
                android:id="@+id/poster_item_like"
                style="@style/text_5E5E5E_14"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/poster_item_comment_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/selector_common"
            android:gravity="center_vertical|center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:padding="11dp"
                android:src="@mipmap/ic_comment" />

            <TextView
                android:id="@+id/poster_item_comment"
                style="@style/text_5E5E5E_14"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0" />

        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/horizontal_line"/>

</LinearLayout>