<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lls"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/bg_color"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_paper_detail_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/expicture" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp">

            <TextView
                android:id="@+id/tv_paper_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:text="敏抽"
                android:textColor="#000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_paper_detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="2dp"
                android:text="1050 成本:1050.00"
                android:textColor="#c74825" />

            <ImageView
                android:id="@+id/iv_paper_click_close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ad_close_icon" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llss"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/lls"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_public_frist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="规格"
            android:textColor="@color/grgray"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_public_second"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="期初"
            android:textColor="@color/grgray"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_public_thrid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="售出"
            android:textColor="@color/grgray"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_public_fourth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="库存"
            android:textColor="@color/grgray"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_public_fifth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="成本价格"
            android:textColor="@color/grgray"
            android:textSize="16dp" />
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rlv_dalog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_member_vis"
        android:layout_below="@+id/llss"
        android:background="@color/colorWhite" />

    <RelativeLayout
        android:id="@+id/rl_member_vis"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_spg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="合计"
                android:textColor="@color/grgray"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_qchu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/grgray"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_shouc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/grgray"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_kc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/grgray"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0.00"
                android:textColor="@color/grgray"
                android:textSize="12dp" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>