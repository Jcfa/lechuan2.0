        android:layout_margin="5dp"/>

    <ImageView
        android:id="@+id/evaluate_pic_two"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:layout_margin="5dp"/>

    <ImageView
        android:id="@+id/evaluate_pic_three"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:layout_margin="5dp"/>

</LinearLayout>