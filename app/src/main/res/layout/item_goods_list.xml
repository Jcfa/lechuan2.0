<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/home_recycle_item_group"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_white"
        android:paddingBottom="6dp"
        android:paddingRight="10dp"
        android:paddingTop="6dp"
        android:paddingLeft="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_recycle_item_select"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
            android:src="@drawable/selector_home_recycle_item_select_img"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/home_recycle_item_iv"
            android:scaleType="centerCrop"
            android:layout_marginLeft="5dp"
            android:layout_width="66dp"
            android:layout_height="66dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home_goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="@dimen/z_text_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/home_goods_number"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/textBlack"
                    android:textSize="@dimen/z_text_little" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/home_to_goods_detail_prompt"
                    android:layout_width="4dp"
                    android:layout_height="10dp"
                    android:background="@mipmap/right_arrow" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="2dp"
                    android:src="@mipmap/home_rmb"/>

                <TextView
                    android:id="@+id/home_goods_money"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="#b95f55"
                    android:textSize="@dimen/textSize_small" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="@string/sale_number"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/textSize_small" />

                <TextView
                    android:id="@+id/home_goods_sales_volume_tv"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/z_text_little" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:text="@string/stock"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/z_text_little" />

                <TextView
                    android:id="@+id/home_goods_stock_tv"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:maxLines="1"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/z_text_little" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>