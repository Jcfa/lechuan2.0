<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_EEEEEE"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorTitleBarBg">

        <ImageView
            android:id="@+id/order_delivery_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_common"
            android:padding="10dp"
            android:src="@mipmap/poster_details_back" />

        <TextView
            android:id="@+id/order_delivery_title"
            style="@style/text_5E5E5E_18"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="订单发货" />

        <TextView
            android:id="@+id/order_delivery_confirm_btn"
            style="@style/text_5E5E5E_12"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_order_b_frame"
            android:gravity="center"
            android:text="发货"
            android:textColor="#FFFFFF" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            style="@style/text_9E9E9E_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号：" />

        <TextView
            android:id="@+id/order_delivery_order_id"
            style="@style/text_9E9E9E_14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="13400000001" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_DDDDDD" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:padding="15dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/location" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/order_delivery_name"
                style="@style/text_9E9E9E_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="姓名+手机号" />

            <TextView
                android:id="@+id/order_delivery_address"
                style="@style/text_9E9E9E_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="收货地址" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/order_delivery_mode_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_order_common"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:padding="15dp">

        <TextView
            style="@style/text_5E5E5E_14"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="发货方式" />

        <TextView
            android:id="@+id/order_delivery_mode"
            style="@style/text_5E5E5E_14"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="center"
            android:src="@mipmap/right_arrow_icon" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_DDDDDD" />

    <LinearLayout
        android:id="@+id/order_delivery_company_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_order_common"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            style="@style/text_5E5E5E_14"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="物流公司" />

        <TextView
            android:id="@+id/order_delivery_company"
            style="@style/text_5E5E5E_14"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="center"
            android:src="@mipmap/right_arrow_icon" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_DDDDDD" />

    <LinearLayout
        android:id="@+id/order_delivery_number_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            style="@style/text_5E5E5E_14"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="运单号" />

        <EditText
            android:id="@+id/order_delivery_number_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="录入或扫码"
            android:maxLength="32"
            android:gravity="right|center"
            android:inputType="number"
            style="@style/text_5E5E5E_14" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="22dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/color_DDDDDD" />

        <ImageView
            android:id="@+id/order_delivery_number_iv"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:scaleType="fitCenter"
            android:background="@drawable/selector_common"
            android:src="@mipmap/home_scan" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/color_EEEEEE" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_EEEEEE" />

    <TextView
        android:id="@+id/order_delivery_set_company_layout"
        style="@style/text_00BCB4_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="设置默认物流公司" />

</LinearLayout>