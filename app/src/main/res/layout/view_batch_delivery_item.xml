<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/batch_delivery_item_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_order_common"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/color_EEEEEE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/batch_delivery_item_rb"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="fitCenter"
            android:padding="2dp"
            android:src="@mipmap/icon_ad_selected_blue_48" />

        <TextView
            style="@style/text_9E9E9E_14"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="订单号：" />

        <TextView
            android:id="@+id/batch_delivery_item_no"
            style="@style/text_9E9E9E_14"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="201712111254625" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@mipmap/right_arrow_icon" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="34dp"
        android:background="@color/color_DDDDDD" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="34dp"
        android:paddingTop="12dp"
        android:paddingRight="10dp"
        android:paddingBottom="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/batch_delivery_item_name"
            style="@style/text_5E5E5E_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:text="收货人,1340000000," />

        <TextView
            android:id="@+id/batch_delivery_item_address"
            style="@style/text_5E5E5E_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingTop="4dp"
            android:text="收货地址" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_DDDDDD" />

</LinearLayout>