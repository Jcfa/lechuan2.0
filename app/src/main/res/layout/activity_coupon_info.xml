<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@drawable/shape_down_line"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/coupon_info_back"
            style="@style/iv_back" />

        <TextView
            style="@style/text_title"
            android:text="优惠券"/>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/coupon_root"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textSize="@dimen/textSize_normal"
            android:textColor="#f30000"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/coupon_info_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:text="0"
            android:textSize="@dimen/textSize_normal"
            android:textColor="#f30000"/>

        <TextView
            android:id="@+id/coupon_info_use_need"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/textSize_middle"
            android:textColor="@color/color_5E5E5E"
            android:text="满100元可用"/>

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/lineBg"
            android:layout_alignBottom="@+id/coupon_info_use_need"
            android:layout_toRightOf="@+id/coupon_info_use_need"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/coupon_info_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/coupon_info_use_need"
            android:text="总数"
            android:layout_toRightOf="@+id/coupon_info_use_need"
            android:textSize="@dimen/textSize_middle"
            android:layout_marginLeft="40dp"
            android:textColor="@color/color_5E5E5E"/>

        <TextView
            android:id="@+id/coupon_receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/coupon_info_total"
            android:layout_toRightOf="@+id/coupon_info_total"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/textSize_middle"
            android:textColor="@color/color_5E5E5E"
            android:text="已领"/>

        <TextView
            android:id="@+id/coupon_info_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/textSize_middle"
            android:textColor="@color/color_999999"
            android:text="2017-11-03 — 2017-11-08"/>

        <ImageButton
            android:id="@+id/coupon_info_del"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:src="@mipmap/icon_delete_64_00bcb4"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_common"/>

        <ImageButton
            android:id="@+id/coupon_info_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="4dp"
            android:src="@mipmap/icon_share_64_00bcb4"
            android:background="@drawable/selector_common"/>

    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="40dp">

        <View
            android:layout_width="4dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@color/color_00BCB4"/>

        <TextView
            android:id="@+id/tag_receive_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/textSize_normal"
            android:text="领取记录"/>

        <TextView
            android:id="@+id/coupon_record_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_middle"
            android:textColor="@color/color_00BCB4"
            android:text="（0）"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tag_receive_record"
            android:layout_marginLeft="3dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/shape_down_line"
        android:layout_height="40dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/textSize_middle"
            android:text="时间"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/textSize_middle"
            android:text="券号"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/textSize_middle"
            android:text="领券数"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/textSize_middle"
            android:text="手机"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/textSize_middle"
            android:text="状态"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/receive_record_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>