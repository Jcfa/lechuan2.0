<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/batch_delivery_next_item_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_order_common"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/color_EEEEEE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            style="@style/text_9E9E9E_14"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="订单号：" />

        <TextView
            android:id="@+id/batch_delivery_next_item_no"
            style="@style/text_9E9E9E_14"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="201712111254625" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@mipmap/right_arrow_icon" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_DDDDDD" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingRight="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/batch_delivery_next_item_name"
            style="@style/text_5E5E5E_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:text="收货人,1340000000," />

        <TextView
            android:id="@+id/batch_delivery_next_item_address"
            style="@style/text_5E5E5E_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingTop="4dp"
            android:text="收货地址" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_DDDDDD" />

    <LinearLayout
        android:id="@+id/order_delivery_number_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:focusableInTouchMode="true"
        android:padding="15dp">

        <TextView
            style="@style/text_5E5E5E_14"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="运单号" />

        <TextView
            android:id="@+id/batch_delivery_next_item_number_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="录入或扫码"
            android:gravity="right|center"
            style="@style/text_5E5E5E_14" />

        <View
            android:layout_width="1dp"
            android:layout_height="22dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/color_EEEEEE" />

        <ImageView
            android:id="@+id/batch_delivery_next_item_number_iv"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:scaleType="fitCenter"
            android:background="@drawable/selector_common"
            android:src="@mipmap/home_scan" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_DDDDDD" />

</LinearLayout>