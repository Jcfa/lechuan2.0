<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_background"
        android:orientation="vertical">

        <TextView
            style="@style/text_middle"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="1、下载上传助手"/>

        <TextView
            style="@style/text_small"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="4dp"
            android:text="点击前往下载，若您已下载上传助手，请见下方说明。"
            android:textColor="@color/textGray"/>

        <TextView
            android:id="@+id/upload_goods_download"
            style="@style/text_normal"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_green_radius5_bg"
            android:gravity="center"
            android:text="前往下载"
            android:textColor="#fff"/>

        <TextView
            style="@style/text_middle"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="2、同步至微店"/>

        <TextView
            style="@style/text_small"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="4dp"
            android:text="打开上传助手，在商品上传页面勾选“同步至微商城”，即可上传商品至微店。"
            android:textColor="@color/textGray"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_upload_demonstration"/>

    </LinearLayout>

</ScrollView>