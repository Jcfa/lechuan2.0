<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorTitleBarBg">

        <ImageView
            android:id="@+id/order_price_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_common"
            android:padding="10dp"
            android:src="@mipmap/poster_details_back" />

        <TextView
            android:id="@+id/order_price_title"
            style="@style/text_5E5E5E_18"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="修改价格" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/color_EEEEEE" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    style="@style/text_5E5E5E_14"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="订单号 " />

                <TextView
                    android:id="@+id/order_price_no"
                    style="@style/text_5E5E5E_14"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="201712111254625" />

                <TextView
                    android:id="@+id/order_price_dat"
                    style="@style/text_5E5E5E_14"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="2017-12-11 00:00:00 " />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_DDDDDD" />

            <LinearLayout
                android:id="@+id/order_price_item_groups"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/order_price_radio_group"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:orientation="horizontal" >

                <TextView
                    style="@style/text_5E5E5E_14"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="运费" />

                <CheckBox
                    android:id="@+id/order_price_freight_free"
                    style="@style/OrderRadioButtonThemeRed"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:text="免邮"/>

                <CheckBox
                    android:id="@+id/order_price_freight_other"
                    style="@style/OrderRadioButtonTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:layout_marginLeft="20dp"
                    android:text="运费"/>

                <TextView
                    android:id="@+id/order_price_freight"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:padding="5dp"
                    android:gravity="center_vertical|left"
                    android:background="@drawable/selector_search_order"
                    android:text=""/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_DDDDDD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:padding="10dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_5E5E5E_14"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="实收" />

                <TextView
                    android:id="@+id/order_price_receipts"
                    style="@style/text_FF6537_18"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:text="¥288.88" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FAFAFA"
                android:padding="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/location" />

                <TextView
                    android:id="@+id/order_item_address"
                    style="@style/text_5E5E5E_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingTop="2dp"
                    android:textIsSelectable="true"
                    android:text="收货地址" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_DDDDDD" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_price_change_price_btn"
            style="@style/text_00BCB4_14"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/selector_order_a_frame"
            android:text="一键改价" />

        <View
            android:layout_width="10dp"
            android:layout_height="10dp"/>

        <TextView
            android:id="@+id/order_price_confirm_btn"
            style="@style/text_5E5E5E_14"
            android:textColor="#FFFFFF"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/selector_order_b_frame"
            android:text="确定" />

    </LinearLayout>


</LinearLayout>