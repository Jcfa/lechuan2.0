<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/item_achievement_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/shape_down_line"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/achievement_staff_no"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="001"
        android:textSize="@dimen/textSize_middle"/>

    <TextView
        android:id="@+id/achievement_staff_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="员工"
        android:textSize="@dimen/textSize_middle"/>

    <TextView
        android:id="@+id/item_achievement_sale"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:gravity="center"
        android:text="0.00"
        android:textSize="@dimen/textSize_middle"/>

    <TextView
        android:id="@+id/achievement_sale_target"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:gravity="center"
        android:text="0.00"
        android:textSize="@dimen/textSize_middle"/>

    <TextView
        android:id="@+id/item_achievement_achieve"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:gravity="center"
        android:text="100%"
        android:textSize="@dimen/textSize_middle"/>

</LinearLayout>