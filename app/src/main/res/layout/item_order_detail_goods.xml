<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/shape_down_line"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/order_detail_goods_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:scaleType="centerInside"
                android:src="@mipmap/background_image"/>

            <TextView
                android:id="@+id/order_detail_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/order_detail_goods_image"
                android:ellipsize="end"
                android:maxEms="16"
                android:singleLine="true"
                android:text="商品名"
                android:textSize="@dimen/z_text_small"/>

            <TextView
                android:id="@+id/order_detail_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/order_detail_goods_image"
                android:ellipsize="end"
                android:maxEms="16"
                android:singleLine="true"
                android:text="¥ 0.00"
                android:textColor="@color/color_FF6537"
                android:textSize="@dimen/textSize_small"/>

            <TextView
                android:id="@+id/order_detail_goods_spec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/order_detail_goods_price"
                android:ellipsize="end"
                android:maxEms="16"
                android:singleLine="true"
                android:text="--/--"
                android:textSize="@dimen/textSize_small"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/order_detail_goods_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textSize="@dimen/textSize_middle"/>

        <TextView
            android:id="@+id/order_detail_goods_amount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:gravity="center"
            android:text="0.00"
            android:textSize="@dimen/textSize_middle"/>

    </LinearLayout>

</LinearLayout>