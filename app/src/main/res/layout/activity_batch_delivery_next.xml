<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_EEEEEE"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorTitleBarBg">

        <ImageView
            android:id="@+id/batch_delivery_next_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_common"
            android:padding="10dp"
            android:src="@mipmap/poster_details_back" />

        <TextView
            android:id="@+id/batch_delivery_next_title"
            style="@style/text_5E5E5E_18"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="批量发货" />

        <TextView
            android:id="@+id/batch_delivery_next_confirm_btn"
            style="@style/text_5E5E5E_12"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_order_b_frame"
            android:gravity="center"
            android:text="发货"
            android:textColor="#FFFFFF" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_DDDDDD" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/color_EEEEEE" />

            <LinearLayout
                android:id="@+id/batch_delivery_next_mode_layout"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/selector_common"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    style="@style/text_5E5E5E_14"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="发货方式" />

                <TextView
                    android:id="@+id/batch_delivery_next_mode"
                    style="@style/text_5E5E5E_14"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:text="物流" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:src="@mipmap/right_arrow_icon" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:background="@color/color_DDDDDD" />

            <LinearLayout
                android:id="@+id/batch_delivery_next_company_layout"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/selector_common"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    style="@style/text_5E5E5E_14"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="物流公司" />

                <TextView
                    android:id="@+id/batch_delivery_next_company"
                    style="@style/text_5E5E5E_14"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:text="顺丰速递" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:src="@mipmap/right_arrow_icon" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_DDDDDD" />

            <LinearLayout
                android:id="@+id/batch_delivery_next_item_groups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_EEEEEE" />

        </LinearLayout>

    </ScrollView>



</LinearLayout>