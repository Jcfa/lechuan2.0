<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:padding="3dp"
    android:id="@+id/group_model_item"
    android:background="@drawable/selector_bg_oa_packages"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/group_model_pic"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/group_model_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/z_text_small"
        android:textColor="@color/color_5E5E5E"
        android:layout_margin="10dp"
        android:singleLine="true"
        android:ellipsize="end"/>

</LinearLayout>