<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.8"
        android:gravity="bottom|center_horizontal"
        android:textSize="@dimen/z_text_normal"
        android:textColor="@color/textBlack"
        android:text="是否确认从稿件箱中删除？"/>

    <TextView
        android:id="@+id/delete_renewals_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:text="--"
        android:textColor="@color/color_5E5E5E"
        android:gravity="center"
        android:textSize="@dimen/z_text_small"/>

    <View
        style="@style/under_line_C7C7C7"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/renewals_delete_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/z_text_normal"
            android:textColor="@color/textBlack"
            android:text="取消"
            android:gravity="center"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/lineBg"/>

        <TextView
            android:id="@+id/renewals_delete_ok"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/z_text_normal"
            android:textColor="@color/textBlack"
            android:text="确定"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>