<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/shape_down_line"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_achieve_detail_count"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="0.00"
        android:textSize="@dimen/textSize_middle"/>

    <TextView
        android:id="@+id/item_achieve_detail_amount"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="0.00"
        android:textSize="@dimen/textSize_middle"/>

    <TextView
        android:id="@+id/item_achieve_detail_target"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="0.00"
        android:textSize="@dimen/textSize_middle"/>

    <TextView
        android:id="@+id/item_achieve_detail_percent"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="0.00"
        android:textSize="@dimen/textSize_middle"/>

</LinearLayout>