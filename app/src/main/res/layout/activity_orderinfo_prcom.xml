<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_EEEEEE"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/layout_title_back" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_order_center"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/ll"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/orderinfo_main_bg"
        android:orientation="horizontal"
        android:padding="8dp">

        <RelativeLayout
            android:id="@+id/rl_order_sell"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_order_center_head"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignBottom="@+id/tv1"
                android:layout_alignTop="@+id/tv_order_sell_price"
                android:layout_marginLeft="4dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_sale_data" />

            <TextView
                android:id="@+id/tv_order_cb_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/iv_order_center_head"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="0.00"
                android:textColor="@color/color_999999"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_order_cb_price"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/iv_order_center_head"
                android:gravity="center"
                android:text="成本"
                android:textColor="@color/color_999999"
                android:textSize="12dp" />
        </RelativeLayout>

        <View
            android:id="@+id/view_cb"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/lineBg" />

        <RelativeLayout
            android:id="@+id/rl_order_aim"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_order_income_head"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignBottom="@+id/tv2"
                android:layout_alignTop="@+id/tv_order_income_price"
                android:layout_marginLeft="4dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_gross_profit_data" />

            <TextView
                android:id="@+id/tv_order_income_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_order_income_head"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="0.00"
                android:textColor="@color/color_999999"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_order_income_price"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/iv_order_income_head"
                android:gravity="center"
                android:text="收入"
                android:textColor="@color/color_999999"
                android:textSize="12dp" />
        </RelativeLayout>

        <View
            android:id="@+id/view_income"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/lineBg" />


        <RelativeLayout
            android:id="@+id/rl_order_spend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_order_spend_head"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignBottom="@+id/tv3"
                android:layout_alignTop="@+id/tv_order_spend_price"
                android:layout_marginLeft="4dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_finish_rate" />

            <TextView
                android:id="@+id/tv_order_spend_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/iv_order_spend_head"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="0.00"
                android:textColor="@color/color_999999"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_order_spend_price"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/iv_order_spend_head"
                android:gravity="center"
                android:text="支出"
                android:textColor="@color/color_999999"
                android:textSize="12dp" />
        </RelativeLayout>

        <View
            android:id="@+id/view_spend"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/lineBg" />


        <RelativeLayout
            android:id="@+id/rl_order_profits"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_order_profits_head"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignBottom="@+id/tv4"
                android:layout_alignTop="@+id/tv_order_profits_price"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_target_data" />

            <TextView
                android:id="@+id/tv_order_profits_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_order_profits_head"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="0.00"
                android:textColor="@color/color_999999"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_order_profits_price"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/iv_order_profits_head"
                android:gravity="center"
                android:text="利润"
                android:textColor="@color/color_999999"
                android:textSize="12dp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/ll_order_center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/orderinfo_main_bg">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/date_icon" />

        <TextView
            android:id="@+id/tv_select_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="60dp"
            android:textSize="14dp"
            android:textColor="@color/textBlack"
            android:text="" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/rl2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/orderinfo_main_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_order_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="时 间"
            android:textColor="@color/textBlack"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_order_yyy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="收  入"
            android:textColor="@color/textBlack"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/tv_order_sell_many"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="成  本"
            android:textColor="@color/textBlack"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_order_renwu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="支  出"
            android:textColor="@color/textBlack"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_order_zm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="净 利 润"
            android:textColor="@color/textBlack"
            android:textSize="14dp" />
    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rl"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/line" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rlv_order_pc_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll1"
        android:layout_below="@+id/rl"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorWhite" />

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_spg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="合计"
            android:textColor="@color/textBlack"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_qchu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/color_999999"
            android:textSize="12dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_shouc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/color_999999"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_kc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/color_999999"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0.00"
            android:textColor="@color/color_999999"
            android:textSize="12dp" />
    </LinearLayout>
</RelativeLayout>