<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/m_dg_item_root"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="12px"
        android:background="#eeeeee"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/lineBg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:paddingTop="20px"
        android:paddingBottom="20px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/m_dg_item_select"
            android:layout_width="55px"
            android:layout_height="55px"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20px"
            android:src="@drawable/selector_home_recycle_item_select_img"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/m_dg_item_iv"
            android:scaleType="centerCrop"
            android:layout_width="200px"
            android:layout_height="200px"
            android:background="@mipmap/background_image"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="31px"
            android:layout_marginTop="16px"
            android:layout_marginBottom="10px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/m_dg_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#000000"
                android:textSize="40px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/m_dg_number"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/textGray"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/has_discount_name"
                    android:layout_width="0dp"
                    android:layout_height="35px"
                    android:layout_weight="5"
                    android:textSize="36px"
                    android:textColor="#f00" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="14px"
                    android:layout_height="21px"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/home_rmb"
                    android:layout_marginRight="5px" />

                <TextView
                    android:id="@+id/m_dg_money"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="#b95f55"
                    android:textSize="35px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="销量"
                    android:textColor="#9b9d9b"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/m_dg_sales_volume_tv"
                    android:layout_width="96px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10px"
                    android:layout_marginLeft="35px"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="#9b9d9b"
                    android:textSize="28px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10px"
                    android:gravity="center"
                    android:text="库存"
                    android:textColor="#9b9d9b"
                    android:textSize="28px" />

                <TextView
                    android:id="@+id/m_dg_stock_tv"
                    android:layout_width="96px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="35px"
                    android:maxLines="1"
                    android:textColor="#9b9d9b"
                    android:textSize="28px" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>