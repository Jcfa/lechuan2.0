<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            style="@style/text_5E5E5E_16"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="商品总价&#160;"/>

        <EditText
            android:id="@+id/dialog_modify_price_et"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:background="@drawable/selector_search_order"
            android:hint=""
            android:inputType="numberDecimal"
            android:gravity="center"
            android:selectAllOnFocus="true"
            android:maxLength="11"/>

        <TextView
            style="@style/text_5E5E5E_16"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="&#160;元"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <TextView
            style="@style/text_5E5E5E_16"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="整单折扣&#160;"/>

        <EditText
            android:id="@+id/dialog_modify_discount_et"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:background="@drawable/selector_search_order"
            android:hint=""
            android:inputType="numberDecimal"
            android:gravity="center"
            android:selectAllOnFocus="true"
            android:maxLength="11"/>

        <TextView
            style="@style/text_5E5E5E_16"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="&#160;折"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="*总价将按原价的比例平摊到各商品上"
        android:layout_marginBottom="10dp"/>

    <View
        style="@style/horizontal_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_btn_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_modify_price_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/text_5E5E5E_14"
            android:gravity="center"
            android:background="@drawable/selector_common"
            android:text="取消"/>

        <View
            style="@style/vertical_line"/>

        <TextView
            android:id="@+id/dialog_modify_price_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            style="@style/text_5E5E5E_14"
            android:background="@drawable/selector_common"
            android:text="确定"/>

    </LinearLayout>

</LinearLayout>