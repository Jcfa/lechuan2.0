<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/model_group_view"
    android:background="@android:color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/color_EEEEEE"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/oa_set_model_group"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="新品推荐"
            android:maxLength="10"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/z_text_normal"
            android:gravity="center_vertical"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.6"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:textSize="@dimen/z_text_little"
            android:textColor="@color/color_999999"
            android:text="请选择合适的模板"
            android:gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多"
            android:textColor="@color/color_5E5E5E"
            android:textSize="@dimen/z_text_small"
            android:drawablePadding="8dp"
            android:drawableRight="@mipmap/right_arrow"/>
        
    </LinearLayout>
    
    <View
        style="@style/under_line_C7C7C7"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/model_one"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_model_one"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/item_model_one_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/oa_set_model_des_text" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/model_two"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_model_two"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/item_model_two_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/oa_set_model_des_text" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/model_three"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_model_three"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/item_model_three_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/oa_set_model_des_text" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>