<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/model_group_view"
    android:background="@android:color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/color_EEEEEE"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/oa_set_model_group"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1.6"
                android:text="新品推荐"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/z_text_normal"
                android:gravity="bottom"/>

            <LinearLayout
                android:id="@+id/oa_set_model_group_des"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="共 "
                    android:textSize="@dimen/z_text_little"
                    android:textColor="@color/color_999999"/>

                <TextView
                    android:id="@+id/oa_set_model_group_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorRed"
                    android:textSize="@dimen/z_text_little"
                    android:text="8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 款模板，可任意选用。"
                    android:textSize="@dimen/z_text_little"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/color_999999"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/oa_set_model_group_timeout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:visibility="gone"
                android:gravity="center_vertical">

                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="到期日："
                    android:textSize="15sp"
                    android:textColor="@color/color_5E5E5E"/>
                
                <TextView
                    android:id="@+id/oa_model_time_out_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018-01-01"
                    android:textSize="@dimen/z_text_small"
                    android:textColor="@color/color_999999"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="剩余 "
                    android:textColor="@color/color_5E5E5E"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:drawableLeft="@mipmap/oa_clock_48"/>

                <TextView
                    android:id="@+id/oa_mode_time_less"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/z_text_normal"
                    android:text="0"
                    android:textColor="@color/colorRed"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_5E5E5E"
                    android:text=" 日"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/oa_set_model_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/z_text_small"
            android:textColor="@color/color_FF6537"
            android:layout_marginRight="8dp"
            android:text="¥168.00"/>
        
        <TextView
            android:id="@+id/oa_set_model_buy"
            android:layout_width="56dp"
            android:layout_height="34dp"
            android:background="@drawable/selector_bg_buy_now"
            android:gravity="center"
            android:text="购买"
            android:textColor="@android:color/white"
            android:textSize="@dimen/z_text_small"/>

        <TextView
            android:id="@+id/oa_model_group_continue"
            android:layout_width="56dp"
            android:layout_height="36dp"
            android:background="@drawable/selector_bg_buy_now"
            android:gravity="center"
            android:text="续费"
            android:textColor="@android:color/white"
            android:textSize="@dimen/z_text_small"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/oa_model_group_bought"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已购买"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/z_text_small"
            android:visibility="gone"/>
        
    </LinearLayout>
    
    <View
        style="@style/under_line_C7C7C7"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TableRow >

            <ImageView
                android:id="@+id/item_model_one"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/item_model_two"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/item_model_three"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:scaleType="centerCrop" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/item_model_one_des"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                style="@style/oa_set_model_des_text" />

            <TextView
                android:id="@+id/item_model_two_des"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                style="@style/oa_set_model_des_text" />

            <TextView
                android:id="@+id/item_model_three_des"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                style="@style/oa_set_model_des_text" />

        </TableRow>

    </TableLayout>

</LinearLayout>