<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/new_real_shop_back"
            style="@style/iv_back" />

        <TextView
            style="@style/text_title"
            android:text="店铺信息" />

        <Button
            android:id="@+id/new_real_shop_next"
            android:layout_width="@dimen/title_button_width"
            android:layout_height="34dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/selector_common_green_btn"
            android:text="修改"
            android:textColor="#fff"
            android:textSize="14sp" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/lineBg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="店招"
            android:textSize="14sp"
            android:paddingLeft="20dp"/>
        
        <ImageView
            android:id="@+id/new_shop_picture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:scaleType="centerInside"
            android:src="@mipmap/background_image"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店名"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:drawableLeft="@mipmap/icon_need_32"/>

        <EditText
            android:id="@+id/new_shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="right"
            android:maxLength="20"
            android:selectAllOnFocus="true"
            android:layout_marginLeft="30dp"
            android:background="@android:color/transparent"
            android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@android:color/white"
        android:layout_marginTop="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="14sp"
            android:text="简介"/>

        <EditText
            android:id="@+id/new_real_shop_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:maxHeight="100dp"
            android:textSize="14sp"
            android:minLines="2"
            android:maxLines="3"
            android:maxLength="150"
            android:background="@android:color/transparent"
            android:paddingRight="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系人"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:drawableLeft="@mipmap/icon_need_32"/>

        <EditText
            android:id="@+id/new_shop_contacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@android:color/transparent"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLength="15"
            android:gravity="right"
            android:selectAllOnFocus="true"
            android:layout_marginLeft="30dp"
            android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:drawableLeft="@mipmap/icon_need_32"/>

        <EditText
            android:id="@+id/new_shop_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="40dp"
            android:background="@android:color/transparent"
            android:singleLine="true"
            android:inputType="phone"
            android:ellipsize="end"
            android:maxLength="11"
            android:selectAllOnFocus="true"
            android:gravity="right"
            android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话"
            android:textSize="14sp"
            android:paddingLeft="20dp" />

        <EditText
            android:id="@+id/new_shop_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:singleLine="true"
            android:background="@android:color/transparent"
            android:ellipsize="end"
            android:gravity="right"
            android:maxLength="15"
            android:selectAllOnFocus="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地区信息"
            android:textSize="14sp"
            android:paddingLeft="20dp" />

        <TextView
            android:id="@+id/new_shop_area"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="14sp"
            android:gravity="right"
            android:background="@android:color/transparent"
            android:hint="省/市/区"
            android:textColorHint="#979797"/>

        <ImageView
            android:id="@+id/new_real_shop_location"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/right_arrow"
            android:visibility="visible"
            android:scaleType="centerInside"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详细信息"
            android:textSize="14sp"
            android:paddingLeft="20dp" />

        <EditText
            android:id="@+id/new_real_shop_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="街道门牌信息"
            android:textColorHint="#979797"
            android:selectAllOnFocus="true"
            android:textSize="14sp"
            android:gravity="right"
            android:background="@android:color/transparent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bind_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定支付"
            android:textSize="14sp"
            android:paddingLeft="20dp" />

        <TextView
            android:id="@+id/bind_pay_state"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="14sp"
            android:gravity="right"
            android:background="@android:color/transparent"
            android:hint="请前往绑定微信支付"
            android:drawableRight="@mipmap/right_arrow"
            android:layout_marginRight="20dp"
            android:textColorHint="#979797"/>

    </LinearLayout>

</LinearLayout>