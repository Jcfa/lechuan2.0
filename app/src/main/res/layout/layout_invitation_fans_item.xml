<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_follow_item_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_bg"
    android:orientation="horizontal"
    android:padding="10dp">

    <!--<LinearLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_margin="10dp"-->
    <!--android:orientation="horizontal">-->
    <ImageView
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:src="@drawable/seletor_checked_image" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <org.raphets.roundimageview.RoundImageView
            android:id="@+id/my_follow_item_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/pic_thumb" />

        <TextView
            android:id="@+id/my_follow_item_name"
            style="@style/text_5E5E5E_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/my_follow_item_img"
            android:ellipsize="end"
            android:gravity="left"
            android:lines="1"
            android:text="" />

        <ImageView
            android:id="@+id/my_follow_item_type"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/my_follow_item_name"
            android:layout_toEndOf="@+id/my_follow_item_name"
            android:padding="2dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/poster_seller_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_follow_item_name"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/my_follow_item_img"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/publish_icon" />

            <TextView
                android:id="@+id/tv_publish_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="2"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/textBlack"
                android:textSize="12sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="@color/line" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/fans_icon" />

            <TextView
                android:id="@+id/tv_fans_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="2"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/textBlack"
                android:textSize="12sp" />
        </LinearLayout>
        <!--<TextView-->
        <!--android:id="@+id/my_follow_item_remark"-->
        <!--style="@style/text_9E9E9E_14"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/my_follow_item_name"-->
        <!--android:layout_toEndOf="@+id/my_follow_item_img"-->
        <!--android:gravity="left"-->
        <!--android:text="注解" />-->

    </RelativeLayout>

    <ImageView
        android:id="@+id/my_follow_item_had_follow"
        android:layout_width="45dp"
        android:layout_height="match_parent"
        android:background="@drawable/selector_common"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:src="@mipmap/poster_rignt_follow_a"
        android:visibility="gone" />

    <TextView
        android:id="@+id/my_follow_item_distribution_btn"
        style="@style/text_5E5E5E_14"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:background="@drawable/selector_orange_frame"
        android:gravity="center"
        android:text=" + 分销"
        android:visibility="gone" />

    <!--</LinearLayout>-->

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="1dp"-->
    <!--android:background="@color/color_EEEEEE" />-->
</LinearLayout>