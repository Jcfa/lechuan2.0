<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_order_poplstaff"
            android:layout_width="0dp"
            android:layout_height="87dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/orderinfo_main_bg"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/xiaoshouzonglan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="人员业绩"
                android:textColor="@color/color_5E5E5E"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_order_primecost"
            android:layout_width="0dp"
            android:layout_height="87dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/orderinfo_main_bg"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/primecost_pic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="月损益表"
                android:textColor="@color/color_5E5E5E"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_order_members"
            android:layout_width="0dp"
            android:layout_height="87dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/orderinfo_main_bg"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/cha_ren_pic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="会员管理"
                android:textColor="@color/color_5E5E5E"
                android:textSize="12dp" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_order_weid"
            android:layout_width="0dp"
            android:layout_height="87dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/orderinfo_main_bg"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/xiaoshouzonglan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="微店"
                android:textColor="@color/color_5E5E5E"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_order_public_hao"
            android:layout_width="0dp"
            android:layout_height="87dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/orderinfo_main_bg"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/chanpinguanli" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="公众号助手"
                android:textColor="@color/color_5E5E5E"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_order_exit"
            android:layout_width="0dp"
            android:layout_height="87dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/orderinfo_main_bg"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/tui_chu_pic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="退出登录"
                android:textColor="@color/color_5E5E5E"
                android:textSize="12dp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>