<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_order_entity_shop"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:background="@drawable/button_order_info_bg"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@mipmap/order_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="实体店"
            android:textColor="@color/sbc_snippet_text"
            android:textSize="12dp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_order_sell"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:background="@drawable/button_order_info_bg"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@mipmap/icon_menu_online" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="微店"
                android:textColor="@color/sbc_snippet_text"
                android:textSize="12dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_not_webshop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="3dp"
            android:padding="3dp"
            android:text="去开通"
            android:textColor="@color/colorGreen"
            android:textSize="@dimen/textSize_tiny"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_order_paper"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:background="@drawable/button_order_info_bg"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@mipmap/icon_menu_vx" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="公众号助手"
                android:textColor="@color/sbc_snippet_text"
                android:textSize="12dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_not_oa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="3dp"
            android:padding="3dp"
            android:text="去开通"
            android:visibility="gone"
            android:textColor="@color/colorGreen"
            android:textSize="@dimen/textSize_tiny" />
    </RelativeLayout>
</LinearLayout>