<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/per_reduce_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/icon_back"
            android:scaleType="centerInside" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center" 
            android:text="满减活动"
            android:textSize="@dimen/z_title_size"
            android:textColor="@color/color_FF6537"/>
        
        <Button
            android:id="@+id/per_reduce_ok"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:textSize="@dimen/z_text_normal"
            android:textColor="@android:color/white"
            android:text="确 定"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_confirm_button_bg"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lineBg"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/z_title_size"
                    android:textColor="@color/textBlack"
                    android:text="活动名称"
                    android:layout_marginLeft="30dp"/>

                <EditText
                    android:id="@+id/per_reduce_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/z_text_normal"
                    android:textColor="@color/textBlack"
                    android:hint="请输入活动名称"
                    android:textColorHint="@color/color_BBBBBB"
                    android:paddingRight="15dp"
                    android:background="@android:color/transparent"
                    android:singleLine="true"
                    android:paddingLeft="15dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#EEEEEE"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/z_title_size"
                    android:textColor="@color/textBlack"
                    android:text="开始时间"
                    android:layout_marginLeft="30dp"/>

                <TextView
                    android:id="@+id/per_reduce_begin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/z_text_normal"
                    android:textColor="@color/textBlack"
                    android:hint="请选择开始时间  >"
                    android:gravity="center_vertical|right"
                    android:textColorHint="@color/color_BBBBBB"
                    android:paddingRight="40dp"
                    android:singleLine="true"
                    android:paddingLeft="15dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/lineBg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/z_title_size"
                    android:textColor="@color/textBlack"
                    android:text="结束时间"
                    android:layout_marginLeft="30dp"/>

                <TextView
                    android:id="@+id/per_reduce_end"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/z_text_normal"
                    android:textColor="@color/textBlack"
                    android:hint="请选择结束时间  >"
                    android:gravity="center_vertical|right"
                    android:textColorHint="@color/color_BBBBBB"
                    android:paddingRight="40dp"
                    android:singleLine="true"
                    android:paddingLeft="15dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#EEEEEE"/>

            <LinearLayout
                android:id="@+id/per_reduce_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>

            <Button
                android:id="@+id/per_reduce_add"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:text="添加下一级"
                android:layout_marginTop="20dp"
                android:background="@drawable/selector_per_reduce_add"
                android:layout_marginBottom="40dp"
                android:textSize="@dimen/z_title_size"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>