<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/list_item_group"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/selector_common_press"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/list_item_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/selector_home_recycle_item_select_img"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/list_item_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/textSize_middle"/>

        <ImageView
            android:id="@+id/list_item_delete"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_common"
            android:padding="15dp"
            android:src="@mipmap/size_color_delete_icon"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="#cccccc"/>

</LinearLayout>