<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="450dp"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:background="#cd533d"
        android:layout_width="320dp"
        android:layout_height="450dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/redbag_dialog_user_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="right"
                android:layout_weight="2.5"
                android:background="@mipmap/agk"
                android:gravity="right"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/redbag_dialog_close"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:padding="14dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/red_bag_close" />

                <View
                    android:id="@+id/redbag_dialog_head_oth"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="40dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3">

                    <ImageView
                        android:id="@+id/redbag_dialog_head_img"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@mipmap/ic_launcher"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/redbag_dialog_head_name"
                        style="@style/text_5E5E5E_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/redbag_dialog_head_img"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="系统用户"
                        android:textStyle="bold"
                        android:textColor="#ebcd9a" />

                    <TextView
                        android:id="@+id/redbag_dialog_textView"
                        style="@style/text_5E5E5E_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/redbag_dialog_head_name"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="给你发了一个红包"
                        android:textColor="#ebcd9a" />

                    <TextView
                        android:id="@+id/redbag_dialog_textView_b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/redbag_dialog_textView"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:text="恭喜发财，大吉大利"
                        android:textColor="#ebcd9a"
                        android:textSize="23sp" />

                    <TextView
                        android:id="@+id/redbag_dialog_textView_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/redbag_dialog_textView_b"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="60dp"
                        android:text="0.00"
                        android:textColor="#5e5e5e"
                        android:visibility="gone"
                        android:textStyle="bold"
                        android:textSize="28sp" />

                    <TextView
                        android:id="@+id/redbag_dialog_other_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/redbag_dialog_textView_c"
                        android:gravity="center"
                        android:paddingTop="60dp"
                        android:paddingBottom="20dp"
                        style="@style/text_5E5E5E_14"
                        android:textColor="#FF6537"
                        android:visibility="gone"
                        android:text="红包已存入您的账户，前往查看 > "/>

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/redbag_dialog_other_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@+id/top"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/redbag_dialog_other_imageView"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="14dp"
                        android:background="@mipmap/red_bag_agd" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/open_red_bag_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="90dp"
            android:background="@mipmap/red_bag_aej" />

        <ImageView
            android:id="@+id/open_red_bag_animation_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="90dp"
            android:visibility="gone"
            android:src="@drawable/lottery_animlist" />

    </RelativeLayout>

</RelativeLayout>