<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_EEEEEE"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/r_member_back"
            style="@style/iv_back"/>

        <TextView
            android:id="@+id/base_view_title"
            style="@style/text_title"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:text="会员管理"/>

        <ImageView
            android:id="@+id/base_view_imagese"
            android:layout_width="@dimen/title_button_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lineBg"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_white_coner_ten"
        android:visibility="gone">

        <ImageView
            android:id="@+id/member_calender"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_calender"/>

        <TextView
            android:id="@+id/member_calender_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/member_calender"
            android:text="2017-07-01"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/member_calender_time_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/member_calender_start"
            android:text="至"
            android:textColor="@color/color_BBBBBB"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/member_calender_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/member_calender_time_to"
            android:text="2017-07-27"
            android:textSize="14sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center"
            android:text="会员名"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/textSize_middle"/>

        <RelativeLayout
            android:id="@+id/buy_account"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/buy_account_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@mipmap/icon_default_sort"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/buy_account_picture"
                android:text="成交数"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/textSize_middle"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/buy_amount"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/buy_amount_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@mipmap/icon_default_sort"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/buy_amount_picture"
                android:text="成交额"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/textSize_middle"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/member_balance"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/member_balance_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@mipmap/icon_default_sort"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/member_balance_picture"
                android:text="余额"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/textSize_middle"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/member_integral"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/member_integral_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@mipmap/icon_default_sort"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/member_integral_picture"
                android:text="积分"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/textSize_middle"/>

        </RelativeLayout>

    </LinearLayout>

    <View style="@style/horizontal_line"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/member_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="@android:color/white">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/member_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </android.support.v4.widget.SwipeRefreshLayout>

    <View style="@style/horizontal_line"/>

    <LinearLayout
        android:id="@+id/member_total_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/white">

        <TextView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:ellipsize="end"
            android:gravity="center"
            android:text="合计："
            android:textColor="@color/textBlack"
            android:textSize="@dimen/textSize_middle"/>

        <TextView
            android:id="@+id/total_member_buy_count"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="0"
            android:textColor="@color/color_FF6537"
            android:textSize="@dimen/textSize_middle"/>

        <TextView
            android:id="@+id/total_member_buy_amount"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="0.00"
            android:textColor="@color/color_FF6537"
            android:textSize="@dimen/textSize_middle"/>

        <TextView
            android:id="@+id/total_member_balance"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="0.00"
            android:textColor="@color/color_FF6537"
            android:textSize="@dimen/textSize_middle"/>

        <TextView
            android:id="@+id/total_member_integral"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="0"
            android:textColor="@color/color_FF6537"
            android:textSize="@dimen/textSize_middle"/>

    </LinearLayout>

</LinearLayout>