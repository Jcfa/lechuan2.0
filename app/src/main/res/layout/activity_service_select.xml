<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height" >

        <ImageView
            android:id="@+id/service_select_back"
            style="@style/iv_back"/>

        <TextView
            style="@style/text_title"
            android:layout_centerInParent="true"
            android:text="套餐选择"/>

        <View
            style="@style/horizontal_line"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical">

                <View
                    android:layout_width="5dp"
                    android:layout_height="24dp"
                    android:background="@color/color_00BCB4"
                    android:layout_marginLeft="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/textSize_middle"
                    android:textColor="@color/textBlack"
                    android:text="套餐选择"/>

            </LinearLayout>

            <View
                style="@style/horizontal_line"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/service_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/lineBg"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical">

                <View
                    android:layout_width="5dp"
                    android:layout_height="24dp"
                    android:background="@color/color_00BCB4"
                    android:layout_marginLeft="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/textSize_middle"
                    android:textColor="@color/textBlack"
                    android:text="套餐说明"/>

            </LinearLayout>

            <View
                style="@style/horizontal_line"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:text="基础版"
                android:textColor="@color/textBlack"
                android:textSize="@dimen/textSize_middle"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/textSize_middle"
                android:textColor="@color/color_999999"
                android:text="1、限制发展分销商10个。\n2、每天提供1篇原创文章发布。"
                android:lineSpacingMultiplier="1.2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:text="高级版"
                android:textColor="@color/textGreen"
                android:textSize="@dimen/textSize_middle"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/z_text_small"
                android:textColor="@color/color_999999"
                android:text="1、不限制分销商数量。\n2、每天提供5篇原创文章发布。"
                android:lineSpacingMultiplier="1.2"/>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/go_to_pay"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:background="@drawable/selector_red_radius5"
        android:text="前往支付"
        android:textSize="@dimen/textSize_middle"/>

</LinearLayout>