<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_common_item"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/article_item_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="@dimen/spacing_small"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_small"
        android:background="@mipmap/background_image"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/article_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_small"
            android:layout_marginTop="@dimen/spacing_small"
            android:ellipsize="end"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/article_item_look"
            style="@style/text_tiny"
            android:text="@string/zero"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:textColor="@color/textGray"
            android:layout_marginLeft="20dp"
            android:drawablePadding="@dimen/spacing_tiny"
            android:drawableLeft="@mipmap/ic_look"/>

        <TextView
            android:id="@+id/article_item_collect"
            style="@style/text_tiny"
            android:text="@string/zero"
            android:layout_height="30dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/selector_common"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:textColor="@color/textGray"
            android:drawablePadding="@dimen/spacing_tiny"
            android:drawableLeft="@mipmap/ic_collect_selected"/>

        <TextView
            android:id="@+id/article_item_share"
            style="@style/text_tiny"
            android:text="@string/zero"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:textColor="@color/textGray"
            android:layout_marginRight="20dp"
            android:drawablePadding="@dimen/spacing_tiny"
            android:drawableLeft="@mipmap/ic_share"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/article_item_select"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:layout_width="50dp"
        android:background="@drawable/selector_frame_confirm"
        android:layout_height="30dp"
        android:textColor="@color/color_00BCB4"
        android:textSize="@dimen/textSize_small"
        android:gravity="center"
        android:text="+ 选择"/>

</LinearLayout>