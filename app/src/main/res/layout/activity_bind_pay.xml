<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bind_pay_back"
            style="@style/iv_back" />

        <TextView
            style="@style/text_title"
            android:text="绑定支付"/>

        <Button
            android:id="@+id/bind_pay_commit"
            android:layout_width="@dimen/title_button_width"
            android:layout_height="34dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/selector_common_green_btn"
            android:text="提交"
            android:textColor="#fff"
            android:textSize="14sp" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lineBg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:text="公众号：appkey"
        android:textSize="@dimen/z_text_normal"
        android:textColor="@color/color_5E5E5E"/>

    <EditText
        android:id="@+id/bind_pay_appid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:hint="请输入公众号appkey"
        android:textColorHint="@color/color_AAAAAA"
        android:textColor="@color/textBlack"
        android:textSize="@dimen/z_text_normal"
        android:imeOptions="actionNext"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:text="商户号：mch_id"
        android:textSize="@dimen/z_text_normal"
        android:textColor="@color/color_5E5E5E"/>

    <EditText
        android:id="@+id/bind_pay_mch_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:hint="请输入商户号mch_id"
        android:textColorHint="@color/color_AAAAAA"
        android:textColor="@color/textBlack"
        android:textSize="@dimen/z_text_normal"
        android:imeOptions="actionDone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:textSize="@dimen/z_text_small"
        android:textColor="@color/color_5E5E5E"
        android:text="注意事项："/>

    <TextView
        android:id="@+id/bind_pay_warn_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="@color/color_5E5E5E"
        android:textSize="@dimen/z_text_small"
        android:lineSpacingMultiplier="1.1"/>

    <TextView
        android:id="@+id/bind_pay_warn_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="@color/color_5E5E5E"
        android:textSize="@dimen/z_text_small"
        android:lineSpacingMultiplier="1.1"/>

</LinearLayout>