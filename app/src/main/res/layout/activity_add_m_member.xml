<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@drawable/shape_down_line"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/add_m_member_back"
            style="@style/iv_back" />

        <TextView
            style="@style/text_title"
            android:text="会员生日"
            android:id="@+id/textView4" />

        <Button
            android:id="@+id/add_m_member_ok"
            android:layout_gravity="right"
            android:layout_width="@dimen/title_button_width"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/textSize_middle"
            android:textColor="@android:color/white"
            android:text="确定"
            android:layout_marginRight="8dp"
            android:background="@drawable/selector_confirm_button_bg"/>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#fff"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_middle"
            android:textColor="@color/textBlack"
            android:text="活动名称"
            android:layout_marginLeft="20dp"
            android:id="@+id/textView10"/>

        <EditText
            android:id="@+id/member_special_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize_middle"
            android:textColor="@color/textBlack"
            android:hint="请输入活动名称"
            android:textColorHint="@color/color_BBBBBB"
            android:paddingRight="20dp"
            android:gravity="right"
            android:background="@android:color/transparent"
            android:singleLine="true"
            android:paddingLeft="15dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动时间"
            android:textSize="@dimen/textSize_middle"
            android:textColor="@color/textBlack"
            android:layout_margin="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自会员生日当天至"
                android:textColor="@color/color_5E5E5E"
                android:textSize="@dimen/textSize_middle"/>

            <EditText
                android:id="@+id/member_special_date"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/shape_m_member_text_bg"
                android:gravity="center"
                android:textSize="@dimen/textSize_middle"
                android:inputType="number"
                android:textColor="@color/color_5E5E5E"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天有效。"
                android:textColor="@color/color_5E5E5E"
                android:textSize="16sp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="折扣范围"
            android:textSize="@dimen/textSize_middle"
            android:textColor="@color/textBlack"
            android:layout_margin="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动期间可享受全店"
                android:textColor="@color/color_5E5E5E"
                android:textSize="@dimen/textSize_middle"/>

            <EditText
                android:id="@+id/member_special_discount"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/shape_m_member_text_bg"
                android:gravity="center"
                android:textSize="@dimen/textSize_middle"
                android:inputType="numberDecimal"
                android:textColor="@color/color_5E5E5E"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="折。"
                android:textColor="@color/color_5E5E5E"
                android:textSize="@dimen/textSize_middle"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/z_text_small"
            android:textColor="@color/color_999999"
            android:text="（注：折扣商品不在打折范围内）"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#EEEEEE"
            android:layout_marginTop="20dp"/>

    </LinearLayout>
    
</LinearLayout>