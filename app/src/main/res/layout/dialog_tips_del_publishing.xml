<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_art_history_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal|bottom"
        android:layout_marginBottom="10dp"
        android:textSize="@dimen/z_text_large"
        android:text="温馨提示"
        android:textColor="@color/color_5E5E5E"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="确定取消发布该篇文章吗？"
        android:textSize="@dimen/z_text_normal"
        android:textColor="@color/color_5E5E5E"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp"/>

    <View
        style="@style/horizontal_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_btn_height">

        <Button
            android:id="@+id/del_publishing_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:textColor="@color/textBlack"
            android:text="取消"
            android:textSize="@dimen/textSize_small"/>

        <View
            style="@style/vertical_line"/>

        <Button
            android:id="@+id/del_publishing_confirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:text="确定"
            android:textSize="@dimen/textSize_small"
            android:textColor="@color/textGreen" />

    </LinearLayout>

</LinearLayout>