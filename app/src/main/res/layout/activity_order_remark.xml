<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_EEEEEE"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorTitleBarBg">

        <ImageView
            android:id="@+id/order_remark_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_common"
            android:padding="10dp"
            android:src="@mipmap/poster_details_back" />

        <TextView
            android:id="@+id/order_remark_title"
            style="@style/text_5E5E5E_18"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="订单备注" />

        <TextView
            android:id="@+id/order_remark_confirm_btn"
            style="@style/text_5E5E5E_12"
            android:textColor="#FFFFFF"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_order_b_frame"
            android:text="确定"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_DDDDDD" />

    <EditText
        android:id="@+id/order_remark_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:hint="建议20个字以内"
        android:maxLength="32"
        android:inputType="textMultiLine"
        android:gravity="left|top"
        android:minLines="5"
        android:layout_margin="10dp"
        android:padding="10dp"
        style="@style/text_5E5E5E_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/order_item_address_iv"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@mipmap/a2u" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="该备注买家不可见"/>

    </LinearLayout>

</LinearLayout>