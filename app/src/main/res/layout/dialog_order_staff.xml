<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lls"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/bg_color"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp">

            <TextView
                android:id="@+id/tv_staff_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="名字"
                android:textColor="@color/grgray"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_staff_xs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:text="销售:0.00"
                android:textColor="@color/grgray" />

            <TextView
                android:id="@+id/tv_staff_rw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@+id/tv_staff_xs"
                android:text="任务:0.00"
                android:textColor="@color/grgray" />

            <TextView
                android:id="@+id/tv_staff_dc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@+id/tv_staff_rw"
                android:text="达成:0.00"
                android:textColor="@color/grgray" />

            <ImageView
                android:id="@+id/iv_paper_click_close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ad_close_icon" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_staff_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="时间"
            android:textColor="@color/grgray"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_staff_xse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="120dp"
            android:text="销售额"
            android:textColor="@color/grgray"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_staff_rw2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="100dp"
            android:text="任务"
            android:textColor="@color/grgray"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_staff_dbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="达标率"
            android:textColor="@color/grgray"
            android:textSize="16dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_EEEEEE" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rlv_staff_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite" />
</LinearLayout>